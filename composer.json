{
    "name": "power-components/powergrid-demo-mic",
    "type": "project",
    "description": "Livewire PowerGrid demo",
    "homepage": "https://demo.livewire-powergrid.com",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8.1",
        "laravel/framework": "10.39.0",
        "laravel/tinker": "^2.9.0",
        "livewire/livewire": "^3.3.5",
        "mews/purifier": "^3.4",
        "openspout/openspout": "^4",
        "power-components/livewire-powergrid": "5.x-dev",
        "predis/predis": "^2.2.2",
        "torchlight/torchlight-laravel": "^0.5.14"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23.1",
        "laravel/pint": "^1.13.8",
        "laravel/sail": "^1.27.0",
        "mockery/mockery": "^1.6.7",
        "nunomaduro/collision": "^7.10.0",
        "pestphp/pest": "^2.31",
        "pestphp/pest-plugin-laravel": "^2.2",
        "phpunit/phpunit": "^10.5.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "pint:fix": "./vendor/bin/pint",
        "test:pint": "./vendor/bin/pint --test",
        "test":   "./vendor/bin/pest --order-by random",
        "cypress": [
            "cd tests/cypress && npx cypress run"
        ],
        "cypress:open": [
            "cd tests/cypress && npx cypress open"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
