{
    "name": "power-components/powergrid-demo-mic",
    "type": "project",
    "description": "Livewire PowerGrid demo",
    "homepage": "https://demo.livewire-powergrid.com",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.5",
        "laravel/framework": "^10.6.2",
        "laravel/sanctum": "^3.2.1",
        "laravel/tinker": "^2.8.1",
        "livewire/livewire": "^2.12.3",
        "openspout/openspout": "^4.13.1",
        "power-components/livewire-powergrid": "^4.3.1",
        "predis/predis": "^2.1.2",
        "torchlight/torchlight-laravel": "^0.5.13",
        "wire-elements/modal": "^1.0.7",
        "wireui/wireui": "^1.17.9"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.8.1",
        "fakerphp/faker": "^1.21.0",
        "laradumps/laradumps": "dev-main",
        "laravel/pint": "^1.7",
        "laravel/sail": "^1.21.3",
        "mockery/mockery": "^1.5.1",
        "nunomaduro/collision": "^7.4",
        "pestphp/pest": "^2.5",
        "pestphp/pest-plugin-laravel": "^2.0",
        "pestphp/pest-plugin-livewire": "^2.0",
        "phpunit/phpunit": "^10.0.19",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "lint": "./vendor/bin/pint",
        "test:lint": "./vendor/bin/pint --test",
        "test:all": "./vendor/bin/pest --order-by random",
        "test": [
            "@test:lint",
            "@test:all"
        ],
        "cypress": [
            "cd tests/cypress && npx cypress run"
        ],
        "cypress:open": [
            "cd tests/cypress && npx cypress open"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
